{
  "name": "vega-tooltip",
  "version": "0.1.3",
  "description": "A tooltip plugin for vega-lite and vega visualizations.",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "npm run data && mkdir -p build",
    "build": "browserify src/index.ts -p tsify -d -s vegaTooltip -o build/index.js",
    "postbuild": "uglifyjs build/index.js -cm > build/index.min.js && cp src/vg-tooltip.css build/vg-tooltip.css",
    "watch": "watchify src/index.ts -v -p tsify -d -s vegaTooltip -o build/index.js",
    "data": "rsync -r node_modules/vega-datasets/data/* data",
    "start": "npm run build && python -m SimpleHTTPServer 4002"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "d3": "^4.0.0",
    "d3-collection": "^1.0.2",
    "d3-selection": "^1.0.4",
    "datalib": "^1.7.3",
    "tsify": "^3.0.1",
    "tslint": "~4.5.1",
    "typescript": "^2.2.2",
    "uglify-js": "^2.6.2",
    "vega": "^3.0.0-beta.28",
    "vega-datasets": "vega/vega-datasets#gh-pages",
    "vega-embed": "^3.0.0-beta.0",
    "vega-lite": "^2.0.0-alpha.8",
    "watchify": "^3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vega/vega-tooltip.git"
  },
  "keywords": [
    "vega-lite",
    "vega",
    "tooltip"
  ],
  "author": "Zening Qu",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/vega/vega-tooltip/issues"
  },
  "homepage": "https://github.com/vega/vega-tooltip#readme",
  "dependencies": {
    "@types/d3": "^4.5.0"
  }
}
